<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:clipChildren="false"
	android:clipToOutline="false">

	<com.ramApps.RegexExercise.ColorSelectionView
		android:id="@+id/style_selection_dialog_ColorSelectionView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="24dp"/>

	<RadioGroup
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="24dp"
		android:weightSum="2"
		android:gravity="center_vertical"
		android:id="@+id/styleselectiondialogRadioGroupStyleTarget">

		<RadioButton
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="Foreground"
			android:layout_weight="1.0"
			android:singleLine="true"
			android:id="@+id/styleselectiondialogRadioButtonForeground"/>

		<RadioButton
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="Background"
			android:singleLine="true"
			android:layout_weight="1.0"
			android:id="@+id/styleselectiondialogRadioButtonBackground"/>

	</RadioGroup>

</LinearLayout>

